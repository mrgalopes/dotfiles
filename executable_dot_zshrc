export PATH=/home/gabriel/.local/share/ponyup/bin:$HOME/lsp/elixir-lsp:$HOME/.local/bin:$JAVA_HOME/bin:$HOME/Android/Sdk/platform-tools:$HOME/programs/bin:$PATH
